#!/bin/sh

yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m config \
    focus_follows_mouse autoraise \
    top_padding 13 \
    bottom_padding 8 \
    left_padding 8 \
    right_padding 8 \
    window_gap 8 \
    window_topmost on \
    window_shadow float \
    layout bsp

yabai -m rule --add app="^Safari$" space=1 layer=bottom
yabai -m rule --add app="^Telegram$" space=2
yabai -m rule --add app="^kitty$" space=3
yabai -m rule --add app="^Discord$" space=4
open -a /Applications/kitty.app

yabai -m signal --add event=application_launched app="^Mail$" action="sleep 0.5 && yabai -m query --windows | jq \".[] | select(.pid | tostring == env.YABAI_PROCESS_ID).id\" | xargs -I{} yabai -m window --close {}"
yabai -m signal --add event=application_launched app="^WhatsApp$" action="sleep 0.5 && yabai -m query --windows | jq \".[] | select(.pid | tostring == env.YABAI_PROCESS_ID).id\" | xargs -I{} yabai -m window --close {}"
